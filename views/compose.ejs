<div class="container-fluid">
    <h1>Compose</h1>
    <form action="/compose" method="POST">
        <div class="form-group">
            <label for="exampleFormControlInput1">Title</label>
            <input type="text" name="blogTitle" class="form-control" id="exampleFormControlInput1">
        </div>
        
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Post</label>
            <textarea name="blogPost" class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-md btn-primary">Publish</button>
    </form>
</div>

